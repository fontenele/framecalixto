            </propriedade>
            <propriedade nome='dataConfirmacao'>
                <nome>Data Confirmacao</nome>
                <abreviacao>Data Confirmacao</abreviacao>
                <descricao>Data de Confirmacao do usuário</descricao>
            </propriedade>
            <propriedade nome='status'>
                <nome>Status do usuário</nome>
                <abreviacao>Status</abreviacao>
                <descricao>Selecione o status do usuário</descricao>
                <dominio>
                    <opcao id='1' >Ativo</opcao>
                    <opcao id='2' >Inativo</opcao>
                    <opcao id='3' >Email não confirmado</opcao>
                </dominio>
            </propriedade>
        </propriedades>
    </entidade>
