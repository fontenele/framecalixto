                <abreviacao>Cód.</abreviacao>
                <descricao>Informe o código</descricao>
            </propriedade>
            <propriedade nome='nmLogin'>
                <nome>Email</nome>
                <abreviacao>Email</abreviacao>
                <descricao>Informe o seu Email</descricao>
            </propriedade>
            <propriedade nome='nmSenha'>
                <nome>Senha</nome>
                <abreviacao>Senha</abreviacao>
                <descricao>Informe a senha</descricao>
            </propriedade>
            <propriedade nome='nmSenhaC'>
                <nome>Confirma Senha</nome>
                <abreviacao>Confirma Senha</abreviacao>
                <descricao>Confirme a sua senha</descricao>
            </propriedade>
            <propriedade nome='senhaGerada'>
